{
  "hosting": {
    "public": "build",
    "site": "moodometer",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "port": "5001"
    },
    "hosting": {
      "port": "5000"
    },
    "firestore": {
      "port": "5002"
    }
  }
}
